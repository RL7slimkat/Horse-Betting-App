<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="#000000"

            >

            <TextView
                android:id="@+id/txtTitleBet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="15dp"
                android:background="#000000"
                android:gravity="center"
                android:text="@string/txtTitleBet"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtHorseNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:gravity="center"
                android:text="@string/hnum"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHorseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:gravity="center"
                    android:text="@string/hname"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#C1C1C1"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/txtHorseOdds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="@string/hodd"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBal"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/balance"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#cccccc"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtBalance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="false"
                    android:background="#000000"
                    android:gravity="center"
                    android:maxWidth="150dp"
                    android:minWidth="110dp"
                    android:text="@string/bal"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <Button
                android:id="@+id/btnBetLess"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="#972E26"
                android:text="@string/less" />

            <TextView
                android:id="@+id/txtBetAmount"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_column="1"
                android:gravity="center"
                android:text="@string/bet"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btnBetMore"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="#3D8A40"
                android:text="@string/more" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPay"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/payout"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#cccccc"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtPayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/payExample"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtGoals"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/goal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#cccccc"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtGoal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="false"

                    android:background="#000000"
                    android:gravity="center"
                    android:maxWidth="150dp"
                    android:minWidth="110dp"
                    android:text="@string/goalExample"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18sp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnBet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#333333"
                    android:gravity="center"
                    android:text="@string/place_bet"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@android:string/cancel"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

        </TableRow>

    </TableLayout>
    </ScrollView>

</RelativeLayout>